<?xml version="1.0" encoding="UTF-8" ?>
<phpunit
	     backupGlobals="false"
         backupStaticAttributes="false"
         strict="true"
         verbose="true">
       
	<testsuites>
		<testsuite name="Ski">
			<directory suffix="Test.php">test</directory>
		</testsuite>
	</testsuites>

	<logging>
		<log type="coverage-html" target="build/coverage" title="Ski"
			charset="UTF-8" yui="true" highlight="true"
			lowUpperBound="35" highLowerBound="70"/>
		<log type="coverage-clover" target="build/logs/clover.xml"/>
		<log type="junit" target="build/logs/junit.xml" logIncompleteSkipped="false"/>
	</logging>

	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">.</directory>
			<exclude>
				<directory>test</directory>
			</exclude>
		</whitelist>
	</filter>

	<php>
		<var name="DB_DSN" value="mysql:host=localhost;dbname=test_showmanager" />
		<var name="DB_USER" value="root" />
		<var name="DB_PASSWD" value="sas0527" />
		<var name="DB_DBNAME" value="test_showmanager" />
		<var name="DB_SYNCNAME" value="showmanager" />
		<var name="DB_DEBUG" value="0"/>       
	</php>
</phpunit>