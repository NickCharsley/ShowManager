<?xml version="1.0" encoding="UTF-8" ?>
<phpunit
	     backupGlobals="false"
         backupStaticAttributes="false"
         strict="true"
         verbose="true"
         processIsolation="false">
                        
	<testsuites>
		<testsuite name="ShowManager">
			<directory suffix="Test.php" >.</directory>
			<exclude>UI</exclude>
			<exclude>Dead_Functional</exclude>
		</testsuite>
	</testsuites>

	<logging>
		<log type="coverage-html" target="../build/coverage" title="ShowManager"
			charset="UTF-8" yui="true" highlight="true"
			lowUpperBound="35" highLowerBound="70"/>
		<log type="coverage-clover" target="../build/logs/clover.xml"/>
		<log type="junit" target="../build/logs/junit.xml" logIncompleteSkipped="false"/>
	</logging>

	<php>
		<var name="DB_DSN" value="mysql:host=localhost;dbname=test_showmanager" />
		<var name="DB_USER" value="test" />
		<var name="DB_PASSWD" value="sas0527" />
		<var name="DB_DBNAME" value="test_showmanager" />
		<var name="DB_SYNCNAME" value="showmanager" />
		<var name="DB_DEBUG" value="0"/>
		<var name="TESTMODE" value="test"/>		
	</php>
</phpunit>